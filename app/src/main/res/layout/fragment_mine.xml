<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的"
        android:layout_centerInParent="true"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@color/color_e3e3e3">
                <ImageView
                    android:id="@+id/btn_mine_settings"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@mipmap/settings"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"/>
                <ImageView
                    android:id="@+id/user_head_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:src="@mipmap/visitor_head_img"
                    android:scaleType="fitXY"
                    android:layout_below="@+id/btn_mine_settings"/>
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    android:text="游客001"
                    android:layout_below="@id/btn_mine_settings"
                    android:layout_toRightOf="@id/user_head_img"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/user_registration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    android:text="立即注册"
                    android:background="@drawable/btn_sel"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_below="@id/btn_mine_settings"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@id/user_name"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="6dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/order_form"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/order_form"/>
                    <TextView
                        android:id="@+id/my_form"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:textSize="18sp"
                        android:text="我的订单"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/order_form"/>
                    <TextView
                        android:id="@+id/btn_all_order_form"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/my_form"
                        android:text="查看全部  \>"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"/>
                    <LinearLayout
                        android:id="@+id/form_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray"
                        android:orientation="vertical"
                        android:layout_below="@+id/order_form"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"/>
                    <LinearLayout
                        android:layout_below="@+id/form_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <LinearLayout
                            android:id="@+id/btn_all"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/all"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="8dp"
                                android:text="全部"
                                android:textSize="16sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/btn_unuse"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/unuse"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="8dp"
                                android:text="未使用"
                                android:textSize="16sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/btn_using"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/using"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="8dp"
                                android:text="使用中"
                                android:textSize="16sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/btn_used"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/used"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="8dp"
                                android:text="已使用"
                                android:textSize="16sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/btn_refund"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/refund"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="8dp"
                                android:text="退款"
                                android:textSize="16sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/btn_extension"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <ImageView
                            android:id="@+id/img_extension"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:scaleType="fitXY"
                            android:src="@mipmap/extension"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img_extension"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:text="推广"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:scaleType="fitXY"
                            android:src="@mipmap/search_go" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="9dp"
                        android:layout_height="1dp"
                        android:background="@color/color_gray"/>
                    <RelativeLayout
                        android:id="@+id/btn_about_us"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <ImageView
                            android:id="@+id/img_about_us"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:scaleType="fitXY"
                            android:src="@mipmap/about_us"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img_about_us"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:text="关于我们"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:scaleType="fitXY"
                            android:src="@mipmap/search_go" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="9dp"
                        android:layout_height="1dp"
                        android:background="@color/color_gray"/>
                    <RelativeLayout
                        android:id="@+id/btn_customer_service"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <ImageView
                            android:id="@+id/img_customer_service"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:scaleType="fitXY"
                            android:src="@mipmap/customer_service"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img_customer_service"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:text="客服"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:scaleType="fitXY"
                            android:src="@mipmap/search_go" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
